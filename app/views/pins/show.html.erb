<div class="row">
	<div class="span10 offset1">	
		<div class = "well">
			<%= image_tag @pin.image (:large) %>
			<p>
			  <%= @pin.description %>
			</p>
			<p>
			  <strong>
			  	<%= @pin.user.name %>
			  </strong>
			</p>
			<% if current_user == @pin.user %>
			  <%= link_to 'Edit', edit_pin_path(@pin) %> |
			  <% end %>
				<%= link_to 'Back', pins_path %>
		</div>
	</div>
</div>
